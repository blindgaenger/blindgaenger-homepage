!!! 5
%html
  %head
    %meta(charset="utf-8")
    %title blindgaenger
    %meta(name="description" content="The homepage of blindgaenger - an alter ego of Bernd Jünger")
    %meta(name="author" content="blindgaenger, bjuenger, Bernd Jünger")
    %link(rel="shortcut icon" href="/favicon.ico")
    %link(rel="apple-touch-icon" href="/apple-touch-icon.png")
          
    %link(rel='stylesheet' href='http://fonts.googleapis.com/css?family=Lobster')
    - if production?
      %link(rel='stylesheet' href='assets/all.css')
    - else
      %link(rel='stylesheet' href='stylesheets/reset.css')
      %link(rel='stylesheet' href='stylesheets/layout.css')
      %link(rel='stylesheet' href='stylesheets/style.css')
    /%script(src='javascripts/modernizr.js')
    
  %body
    
    #container
    
      #content
        = haml :start
        = haml :blog
        = haml :twitter
        = haml :posterous
        = haml :facebook
        = haml :github

      #icon
        #paper

      #navigation
        %nav
          %ul
            = yield_content :navigation

    - if production?
      %script(src='assets/all.js')
    - else
      %script(src='javascripts/jquery.js')
      %script(src='javascripts/jquery.anchor.js')
      %script(src='javascripts/jquery.viewport.js')
      %script(src='javascripts/jquery.current.js')
      %script(src='javascripts/raphael.js')
      %script(src='javascripts/jquery.icons.js')
    %script(src='javascripts/application.js')
