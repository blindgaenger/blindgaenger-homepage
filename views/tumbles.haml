%ul.tumbles
  - @tumbles.each_with_index do |tumble, index|
    %li.tumble
      %a(href="#{tumble.url}" target="_blank")
        - if tumble.body
          %img(src="#{tumble.body}")
        - else
          %h3= tumble.title
        .posted-at= tumble.posted_at.strftime('%d %b')
        - if tumble.body_type == 'video'
          %span.play-button Play

